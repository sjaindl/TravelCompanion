<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/main_fragment">

    <activity
        android:id="@+id/explore_activity"
        android:name="com.sjaindl.travelcompanion.explore.ExploreActivity"
        android:label="@string/explore"
        tools:layout="@layout/activity_explore" />

    <fragment
        android:id="@+id/main_fragment"
        android:name="com.sjaindl.travelcompanion.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_explore">

        <action
            android:id="@+id/action_main_fragment_to_explore_activity"
            app:destination="@id/explore_activity">
            <argument
                android:name="latitude"
                app:argType="float" />
            <argument
                android:name="longitude"
                app:argType="float" />
            <argument
                android:name="radius"
                app:argType="float" />
        </action>
    </fragment>

    <include app:graph="@navigation/navigation_explore" />
</navigation>
